# =============================================================================
# FREE Debug Agent - Environment Configuration Template
# =============================================================================
# Instructions: 
# 1. Copy this file to `.env` in the same directory
# 2. Fill in your actual API keys and tokens
# 3. NEVER commit the `.env` file to Git!
# =============================================================================

# Option 1: AWS Bedrock (RECOMMENDED for production)
USE_BEDROCK=true
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=eu-central-1
BEDROCK_MODEL_ID=anthropic.claude-3-5-sonnet-20240620-v1:0

# Jira Configuration (FREE - up to 10 users)
# Get API token: https://id.atlassian.com/manage-profile/security/api-tokens
JIRA_URL=https://madvika.atlassian.net
JIRA_EMAIL=tech.madvika@gmail.com
JIRA_API_TOKEN=
JIRA_PROJECT_KEY=KAN

# GitHub Configuration (FREE)
# Get token: https://github.com/settings/tokens
# Required scope: repo (full control)
GITHUB_TOKEN=ghp_your-github-token-here
GITHUB_OWNER=your-github-username
GITHUB_REPO=your-repo-name

# Model Configuration
MODEL=claude-3-5-sonnet-20241022-v2
MAX_TOKENS=1024
TEMPERATURE=0.7

# Application Under Test Configuration
APP_URL=https://your-staging-app.com
APP_USERNAME=test-user@example.com
APP_PASSWORD=test-password
APP_TYPE=web_ui

# Agent Settings
DEBUG_MODE=False
LOG_LEVEL=INFO
HEADLESS=False
VIDEO_RECORDING=True
CAPTURE_SCREENSHOTS=True
AUTO_EXPLORE=False
